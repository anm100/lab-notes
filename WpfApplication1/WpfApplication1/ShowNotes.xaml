<Window x:Class="WpfApplication1.ShowNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="ShowNotes" Height="300" Width="300"  Loaded="Window_Loaded">
    <Grid >
        <DataGrid x:Name="dataGrid"  AutoGenerateColumns="False" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="0,18,0,0" VerticalAlignment="Top" Width="284" Height="225">
            <DataGrid.Columns>
                <DataGridTextColumn Header="DATE" Width="SizeToCells"  
                                       Binding="{Binding DATE, StringFormat=\{0:MM/dd/yyy\}}" 
                                       IsReadOnly="False"/>
                <DataGridTextColumn Header="DETAILS" Width="SizeToCells"  
                                       Binding="{Binding DETAILS}" 
                                       IsReadOnly="False"/>
                </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="שמירת שינויים" HorizontalAlignment="Left" Margin="93,248,0,0" VerticalAlignment="Top" Width="110" Click="button_Click"/>

    </Grid>
</Window>
