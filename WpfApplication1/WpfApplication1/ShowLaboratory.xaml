<Window x:Class="WpfApplication1.ShowLaboratory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="ShowLaboratory" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dataGrid" CanUserDeleteRows="True" PreviewKeyDown="dataGrid_PreviewKeyDown"   CanUserAddRows="False" HorizontalAlignment="Left" AutoGenerateColumns="true"  ItemsSource="{Binding}" Margin="3,6,0,0" VerticalAlignment="Top" Width="287" Height="113"/>
        <Button x:Name="button" HorizontalAlignment="Left" Margin="152,144,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name="button1" Content="שמירת שינויים" Width="75" Click="button_Click"/>
        </Button>
        <Button x:Name="button2" Content="חזרה לדף קודם" HorizontalAlignment="Left" Margin="32,141,0,0" VerticalAlignment="Top" Width="97" Click="button1_Click"/>

    </Grid>
</Window>
